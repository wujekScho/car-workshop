<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/crm"
              auth="Container"
              type="javax.sql.DataSource"
              username="root"
              password="root"
              driverClassName="com.mysql.jdbc.Driver"
